use strict;
use warnings;
use lib 'lib';

use Getopt::Long;
use Plack::Runner;
use Twiggy;
use SaharaSync::Hostd;
use SaharaSync::Hostd::Config;

my $config_file;

my $result = GetOptions(
    'config-file=s' => \$config_file,
);

unless($result && defined($config_file)) {
    die "usage: $0 -c [config file]\n";
}

my $config = SaharaSync::Hostd::Config->new_from_file($config_file);
my $hostd  = SaharaSync::Hostd->new($config);
my $app    = $hostd->to_app;

my $runner = Plack::Runner->new(
    server => 'Twiggy',
);
$runner->parse_options('--port' => $hostd->port);
$hostd->log->info('Starting host daemon');
$runner->run($app);
